

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initail-scale-1.0">
        <title>Login</title>

        <link rel="stylesheet" href="/style.css">
        

        <% if(message.length >0) { %>
            <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.
min.css" rel="stylesheet" type="text/css">-->
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% } %>
    </head>

    <body>
        <div class="form-container">
            <h2>LogIn</h2>
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" name="username" id="name" placeholder="Enter your name" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="submit-btn">LogIn</button>
            </form>
            <p>
            <span>don't have an account? <a href="/signup">Signup</a></span>
            <span id="reset"><a href="/passreset">forgotPassword</a></span>
            </p>
        </div>
    </body>
</html>